@model IEnumerable<SystemNokta.Models.Nokta>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Add New Nokta", "Create")
</p>
<table class="table">
    <tr>
        @*<th>
            @Html.DisplayNameFor(model => model.UserName)
        </th>*@
        <th>
            @Html.DisplayNameFor(model => model.NoktaContent)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Like)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DisLike)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.NoktaContent)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Like)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DisLike)
        </td>
        <td>
            @Html.ActionLink("Like", "Like", new { id=item.Id }) |
            @Html.ActionLink("DisLike", "DisLike", new { id=item.Id }) |
            @Html.ActionLink("Comment", "Comment", new { id=item.Id })
        </td>
    </tr>
}

</table>
